<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_user_settings"
    tools:context="com.calwatch.android.activities.UserSettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="target calories / day"
        android:id="@+id/caloriesLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/targetCaloriesText"
        android:layout_below="@+id/caloriesLabel"
        android:background="@color/colorWhite"
        android:text="0"
        android:padding="3dp"
        android:maxLength="4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="update"
        android:id="@+id/updateButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/gray_button"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_marginBottom="60dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="cancel"
        android:id="@+id/cancelButton"
        android:background="@drawable/gray_button"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/updateButton"
        android:layout_toStartOf="@+id/updateButton" />
</RelativeLayout>
