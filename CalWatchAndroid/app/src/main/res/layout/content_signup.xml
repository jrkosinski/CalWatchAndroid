<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_signup"
    android:background="@color/colorLight"
    tools:context="com.calwatch.android.activities.SignupActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/usernameLabel"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorRed"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/usernameText"
        android:layout_below="@+id/usernameLabel"
        android:background="@color/colorWhite"
        android:padding="3dp"
        android:hint="enter a username"
        android:maxLength="40"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/passwordLabel"
        android:layout_below="@+id/usernameText"
        android:textColor="@color/colorRed"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:layout_below="@+id/passwordLabel"
        android:background="@color/colorWhite"
        android:padding="3dp"
        android:hint="password"
        android:maxLength="40"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/password2Label"
        android:layout_below="@+id/passwordText"
        android:textColor="@color/colorRed"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordReenterText"
        android:layout_below="@+id/password2Label"
        android:background="@color/colorWhite"
        android:padding="3dp"
        android:hint="re-enter password"
        android:maxLength="40"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/caloriesLabel"
        android:layout_below="@+id/passwordReenterText"
        android:textColor="@color/colorRed"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/targetCaloriesText"
        android:layout_below="@+id/caloriesLabel"
        android:layout_alignParentStart="true"
        android:background="@color/colorWhite"
        android:text=""
        android:padding="3dp"
        android:maxLength="4"
        android:hint="target calories / day"
        />

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="sign up"
        android:id="@+id/signupButton"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gray_button"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:enabled="false"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
