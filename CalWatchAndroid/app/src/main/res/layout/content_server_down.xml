<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_server_down"
    tools:context="com.calwatch.android.activities.ServerDownActivity">

    <TextView
        android:id="@+id/serverDownLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We're sorry, the server is temporarily down for maintenance right now. Please try again soon."
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/serverDownLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/server_down"
        />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="retry"
        android:id="@+id/retryButton"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gray_button"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
